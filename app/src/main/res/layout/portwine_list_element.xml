<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profil_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="345dp"
        android:layout_height="133dp"
        android:layout_margin="5dp"
        android:background="@drawable/buttonshape_home"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/portwine_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruby"
            app:layout_constraintStart_toStartOf="@+id/winery"
            app:layout_constraintTop_toBottomOf="@+id/winery" />

        <TextView
            android:id="@+id/vintage_portwine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vintage"
            app:layout_constraintStart_toStartOf="@+id/winery"
            app:layout_constraintTop_toBottomOf="@+id/portwine_type" />

        <TextView
            android:id="@+id/bottle_year_portwine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottle year: 2007"
            app:layout_constraintStart_toStartOf="@+id/winery"
            app:layout_constraintTop_toBottomOf="@+id/vintage_portwine" />

        <Button
            android:id="@+id/edit_portwine"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/background_edit_button"
            android:bottomLeftRadius="30dp"
            android:bottomRightRadius="30dp"
            android:text="edit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:topLeftRadius="30dp"
            android:topRightRadius="30dp"
            app:layout_constraintStart_toStartOf="@+id/image_wine"
            app:layout_constraintTop_toBottomOf="@+id/image_wine" />

        <TextView
            android:id="@+id/grade_portwine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:text="grade"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_wine"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_dialog"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/winery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="winery"
            android:textColor="#0A0101"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/image_wine"
            app:layout_constraintTop_toTopOf="@+id/image_wine" />


        <TextView
            android:id="@+id/QTY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty:"
            app:layout_constraintStart_toStartOf="@id/vintage_portwine"
            app:layout_constraintTop_toBottomOf="@+id/bottle_year_portwine" />

        <Button
            android:id="@+id/button_notes"
            android:layout_width="54dp"
            android:layout_height="23dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/background_notes"
            android:text="Notes"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="11sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
